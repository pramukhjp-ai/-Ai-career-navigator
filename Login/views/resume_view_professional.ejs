<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- resume.resumeTitle %> - Resume</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Calibri', 'Arial', sans-serif;
            line-height: 1.5;
            color: #333;
            background: #f5f5f5;
        }

        .page {
            width: 8.5in;
            height: 11in;
            margin: 20px auto;
            padding: 0.5in;
            background: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            position: relative;
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 15px;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
        }

        .header h1 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 3px;
            color: #000;
        }

        .contact-info {
            font-size: 10px;
            letter-spacing: 0.5px;
        }

        .contact-info span {
            margin: 0 8px;
        }

        .contact-info span::before {
            content: "• ";
            color: #666;
        }

        .contact-info span:first-child::before {
            content: "";
        }

        /* Section Styles */
        .section {
            margin-bottom: 12px;
        }

        .section-title {
            font-size: 12px;
            font-weight: bold;
            text-transform: uppercase;
            border-bottom: 1px solid #000;
            padding-bottom: 3px;
            margin-bottom: 8px;
            letter-spacing: 1px;
        }

        /* Professional Summary */
        .summary {
            font-size: 10px;
            line-height: 1.4;
            text-align: justify;
        }

        /* Experience Section */
        .experience-item {
            margin-bottom: 8px;
            font-size: 10px;
        }

        .job-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 2px;
        }

        .job-title {
            font-weight: bold;
            color: #000;
        }

        .job-dates {
            font-size: 9px;
            color: #666;
        }

        .company-name {
            font-style: italic;
            color: #333;
            margin-bottom: 2px;
            font-size: 10px;
        }

        .job-description {
            margin-left: 15px;
            line-height: 1.3;
            font-size: 9px;
        }

        .job-description li {
            margin-bottom: 1px;
            list-style-position: outside;
        }

        /* Education Section */
        .education-item {
            margin-bottom: 6px;
            font-size: 10px;
        }

        .degree {
            font-weight: bold;
            display: flex;
            justify-content: space-between;
        }

        .school {
            font-style: italic;
            color: #333;
            margin-bottom: 2px;
        }

        .graduation {
            font-size: 9px;
            color: #666;
        }

        /* Skills Section */
        .skills-container {
            font-size: 10px;
        }

        .skill-category {
            margin-bottom: 5px;
        }

        .skill-label {
            font-weight: bold;
            display: inline-block;
            width: 100px;
            vertical-align: top;
        }

        .skill-items {
            display: inline-block;
            width: calc(100% - 110px);
        }

        /* Certifications */
        .certification-item {
            margin-bottom: 4px;
            font-size: 10px;
        }

        .cert-name {
            font-weight: bold;
        }

        .cert-issuer {
            color: #666;
            font-size: 9px;
        }

        /* Action Buttons */
        .toolbar {
            position: sticky;
            top: 0;
            background: white;
            padding: 15px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            z-index: 100;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            margin: 0 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 12px;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #764ba2;
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: #f0f0f0;
            color: #333;
            border: 1px solid #ddd;
        }

        .btn-secondary:hover {
            background: #e0e0e0;
        }

        @media print {
            body {
                background: white;
            }
            .toolbar {
                display: none;
            }
            .page {
                margin: 0;
                box-shadow: none;
                width: 100%;
                height: auto;
            }
        }

        @media (max-width: 900px) {
            .page {
                width: 100%;
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="toolbar">
        <a href="/resume/list" class="btn btn-secondary">← Back</a>
        <button class="btn btn-primary" onclick="window.print()">Print / PDF</button>
        <a href="/resume/<%- resume._id %>/edit" class="btn btn-secondary">Edit</a>
        <button class="btn btn-secondary" onclick="downloadResume()">Download</button>
    </div>

    <div class="page">
        <!-- Header -->
        <div class="header">
            <h1><%- resume.personalInfo.firstName %> <%- resume.personalInfo.lastName %></h1>
            <div class="contact-info">
                <span><%- resume.personalInfo.email %></span>
                <span><%- resume.personalInfo.phone %></span>
                <span><%- resume.personalInfo.location %></span>
                <% if (resume.personalInfo.linkedin) { %>
                    <span><%- resume.personalInfo.linkedin %></span>
                <% } %>
            </div>
        </div>

        <!-- Professional Summary -->
        <% if (resume.professionalSummary) { %>
        <div class="section">
            <div class="section-title">Professional Summary</div>
            <div class="summary">
                <%- resume.professionalSummary %>
            </div>
        </div>
        <% } %>

        <!-- Experience Section -->
        <% if (resume.experience && resume.experience.length > 0) { %>
        <div class="section">
            <div class="section-title">Professional Experience</div>
            <% resume.experience.forEach(exp => { %>
            <div class="experience-item">
                <div class="job-header">
                    <span class="job-title"><%- exp.jobTitle %></span>
                    <span class="job-dates"><%- formatDate(exp.startDate) %> – <% if (exp.isCurrentlyWorking) { %>Present<% } else { %><%- formatDate(exp.endDate) %><% } %></span>
                </div>
                <div class="company-name"><%- exp.company %><% if (exp.location) { %>, <%- exp.location %><% } %></div>
                <ul class="job-description">
                    <% if (exp.responsibilities && Array.isArray(exp.responsibilities)) { %>
                        <% exp.responsibilities.forEach(resp => { %>
                        <li><%- resp %></li>
                        <% }); %>
                    <% } else if (exp.description) { %>
                        <li><%- exp.description %></li>
                    <% } %>
                </ul>
            </div>
            <% }); %>
        </div>
        <% } %>

        <!-- Education Section -->
        <% if (resume.education && resume.education.length > 0) { %>
        <div class="section">
            <div class="section-title">Education</div>
            <% resume.education.forEach(edu => { %>
            <div class="education-item">
                <div class="degree">
                    <span><%- edu.degree %> in <%- edu.fieldOfStudy %></span>
                    <span class="graduation"><%- formatDate(edu.graduationDate) %></span>
                </div>
                <div class="school"><%- edu.school %></div>
                <% if (edu.gpa) { %>
                <div class="graduation">GPA: <%- edu.gpa %></div>
                <% } %>
            </div>
            <% }); %>
        </div>
        <% } %>

        <!-- Skills Section -->
        <% if (resume.skills && resume.skills.length > 0) { %>
        <div class="section">
            <div class="section-title">Skills</div>
            <div class="skills-container">
                <% 
                    const skillsByCategory = {};
                    resume.skills.forEach(skill => {
                        const category = skill.category || 'Technical';
                        if (!skillsByCategory[category]) {
                            skillsByCategory[category] = [];
                        }
                        skillsByCategory[category].push(skill.name);
                    });
                    Object.keys(skillsByCategory).forEach(category => {
                %>
                <div class="skill-category">
                    <span class="skill-label"><%- category %>:</span>
                    <span class="skill-items"><%- skillsByCategory[category].join(', ') %></span>
                </div>
                <% }); %>
            </div>
        </div>
        <% } %>

        <!-- Certifications Section -->
        <% if (resume.certifications && resume.certifications.length > 0) { %>
        <div class="section">
            <div class="section-title">Certifications</div>
            <% resume.certifications.forEach(cert => { %>
            <div class="certification-item">
                <span class="cert-name"><%- cert.certificationName %></span>
                <span class="cert-issuer"> | <%- cert.issuingOrganization %></span>
                <% if (cert.issueDate) { %>
                <span class="cert-issuer"> | Issued: <%- formatDate(cert.issueDate) %></span>
                <% } %>
            </div>
            <% }); %>
        </div>
        <% } %>
    </div>

    <script>
        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            const date = new Date(dateString);
            const months = ['January', 'February', 'March', 'April', 'May', 'June',
                          'July', 'August', 'September', 'October', 'November', 'December'];
            return months[date.getMonth()] + ' ' + date.getFullYear();
        }

        function downloadResume() {
            const element = document.querySelector('.page');
            const opt = {
                margin: 0.5,
                filename: '<%- resume.resumeTitle %>.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
            };
            html2pdf().set(opt).from(element).save();
        }
    </script>
</body>
</html>
